<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings
	xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm    
http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	version="1.0">
	
	<description>Entity mapping</description>
	<package>com.jmsilla.crmapitest.domain.entities</package>
	<access>FIELD</access>
	
	<entity class="User">
		<table name="user" schema="public" />
		<attributes>
			<id name="id"/>
			<basic name="name" optional="false">
				<column length="30" />
			</basic>
			<basic name="admin" optional="false" />
		</attributes>
	</entity>
	
	<entity class="Customer">
		<table name="customer" schema="public" />
		<attributes>
			<id name="id"/>
			<basic name="name" optional="false">
				<column length="30" />
			</basic>
			<basic name="surname" optional="false">
				<column length="30" />
			</basic>
			<basic name="createdByUserId">
				<lob />				
			</basic>
		</attributes>
	</entity>
</entity-mappings>